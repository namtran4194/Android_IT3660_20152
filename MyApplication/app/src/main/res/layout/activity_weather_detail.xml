<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.trung_000.myapplication.Weather.WeatherDetail">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imgvbackground"
        android:background="@drawable/backgroundweather1"

        />

    <RelativeLayout
        android:layout_marginTop="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mota"

        >
        <TextView
            android:id="@+id/txtdiachi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hà Nội"
            android:textSize="20sp"
            android:textColor="#FFF"
            />
        <TextView
            android:id="@+id/txtngay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtdiachi"
            android:textSize="15sp"
            android:text="Ngày 18"
            android:textColor="#FFF"
            />
        <ImageView
            android:id="@+id/imgv"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/txtngay"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/txtmain"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtdiachi"
            android:layout_toRightOf="@+id/imgv"
            android:text="Rain"
            android:textSize="50sp"
            android:textColor="#FFF"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imgv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtmain"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:text="Few Cloud"
            android:id="@+id/txtdescription" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="31 °"
            android:layout_marginLeft="10dp"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:id="@+id/txtmax"
            android:layout_below="@+id/txtdescription"
            android:layout_toRightOf="@+id/imgv"
            android:layout_toEndOf="@+id/imgv" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="31 °"
            android:layout_marginLeft="10dp"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:id="@+id/txtmin"
            android:layout_below="@+id/txtdescription"
            android:layout_toRightOf="@+id/txtmax"
            />

    </RelativeLayout>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/mota"
        android:background="#99000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detail"
        android:textSize="20sp"
        android:textColor="#FFF"
        android:gravity="center"
        />
    <TextView
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="0sp"
        android:background="@drawable/background_main"
        />

    <LinearLayout
        android:background="#99000000"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/mota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Temperature :"
            android:textColor="#FFF"
            android:textSize="20sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/txtday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#FFF"
                android:text="Temp day"
                />
            <TextView
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="0sp"
                android:background="@drawable/background_main"
                />
            <TextView
                android:id="@+id/txtmin1"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#FFF"
                android:text="Temp min"
                />
            <TextView
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="0sp"
                android:background="@drawable/background_main"
                />
            <TextView
                android:id="@+id/txtmax1"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:textColor="#FFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Temp max"
                />
            <TextView
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="0sp"
                android:background="@drawable/background_main"
                />
            <TextView
                android:id="@+id/txtnight"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:textColor="#FFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Temp night"
                />
            <TextView
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="0sp"
                android:background="@drawable/background_main"
                />
            <TextView
                android:id="@+id/txteve"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:textColor="#FFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Temp eve"
                />
            <TextView
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="0sp"
                android:background="@drawable/background_main"
                />
            <TextView
                android:id="@+id/txtmorn"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:textColor="#FFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Temp morn"
                />
            <TextView
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="0sp"
                android:background="@drawable/background_main"
                />
        </LinearLayout>
        <TextView
            android:text="Humidity :"
            android:textSize="20sp"
            android:textColor="#FFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/txthumidity"
            />
        <TextView
            android:text="Wind Speed :"
            android:textSize="20sp"
            android:textColor="#FFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/txtspeed"
            />


    </LinearLayout>


</RelativeLayout>
