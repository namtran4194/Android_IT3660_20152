<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundweather"
    tools:context="com.example.trung_000.myapplication.TienichFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:background="#99000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:padding="10dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="@string/huongdan"
            android:textColor="#f2f2f2"
            />
        <LinearLayout android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/imgvmap"
                android:id="@+id/imgvmap"
                android:layout_width="48dp"
                android:layout_height="48dp"
                />
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bản đồ"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:textColor="#e9e6e6"
                />

        </LinearLayout>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="0.01sp"
            android:background="#eaeaea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/weathericon"
                android:id="@+id/imgvthoitiet"
                android:layout_width="48dp"
                android:layout_height="48dp"
                />
            <TextView
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thời tiết"
                android:textColor="#e2e2e2"
                />
        </LinearLayout>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="0.01sp"
            android:background="#e6e4e4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/imgvcho"
                android:src="@drawable/imgvnews"
                android:layout_width="48dp"
                android:layout_height="48dp" />
            <TextView
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lịch họp chợ phiên"
                android:textColor="#dedede"
                />

        </LinearLayout>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="0.01sp"
            android:background="#e6e4e4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



    </LinearLayout>

</FrameLayout>
